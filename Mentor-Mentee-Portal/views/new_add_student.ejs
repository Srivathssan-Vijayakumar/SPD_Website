<%- include('new_student_header'); -%>
<div class="container-fluid admin-page">
    <div id="mySidenav" class="sidenav">
        <a href="javascript:void(0)" class="closebtn" onclick="closeNav()">&times;</a>
        <ul class=" top-navigation-area">
            <li class="nav-item"><div class="profile-image-container"><svg class="profile-image col-md-1" xmlns="http://www.w3.org/2000/svg" width="100" height="100" fill="#fff" class="bi bi-person-circle" viewBox="0 0 16 16">
                <path d="M11 6a3 3 0 1 1-6 0 3 3 0 0 1 6 0z"/>
                <path fill-rule="evenodd" d="M0 8a8 8 0 1 1 16 0A8 8 0 0 1 0 8zm8-7a7 7 0 0 0-5.468 11.37C3.242 11.226 4.805 10 8 10s4.757 1.225 5.468 2.37A7 7 0 0 0 8 1z"/>
              </svg></div></li>
            <li class="nav-item"><a href="/admin">Admin Panel</a></li>
        </ul>
        <ul class=" middle-navigation-area">
            <li class="nav-item"><a href="/admin/add-mentor">Add Mentor</a></li>
            <li class="nav-item"><a class="Active" href="/admin/add-student">Add Student</a></li>
            <li class="nav-item"><a href="/admin/view-feedback">View Feedback</a></li>
            <li class="nav-item"><a href="/admin/dashboard">Dashboard</a></li>
            <li class="nav-item"><a href="/admin/change-mentor">Change Mentor</a></li>
        </ul>
        <ul class=" bottom-navigation-area">
            <li class="nav-item"><a href="/logout">Logout</a></li>   
        </ul>
    </div>
    <div class="col-md-12 nav-button-area">
        <span onclick="openNav()"><svg xmlns="http://www.w3.org/2000/svg" width="30" height="30" fill="currentColor" class="bi bi-list" viewBox="0 0 16 16">
            <path fill-rule="evenodd" d="M2.5 12a.5.5 0 0 1 .5-.5h10a.5.5 0 0 1 0 1H3a.5.5 0 0 1-.5-.5zm0-4a.5.5 0 0 1 .5-.5h10a.5.5 0 0 1 0 1H3a.5.5 0 0 1-.5-.5zm0-4a.5.5 0 0 1 .5-.5h10a.5.5 0 0 1 0 1H3a.5.5 0 0 1-.5-.5z"/>
        </svg></span>
        <div class="logo-container col-md-1">
            <img src="/images/logo.png" class="logo"/>
        </div>
    </div>
    <div id="admin-content col-md-12 main">
        <div class="row">
            <form  action="/admin/add-student" method="POST">
                <div class="row form-group">
                    <input class="col-md-12 form-control"  type="text" placeholder="Enter Your Name" name="Name"/>
                </div>
                <div class="row form-group">
                    <input class="col-md-12 form-control" type="text" placeholder="Enter Your Username" name="Username"/>
                </div>
                <div class="row form-group">
                    <input class="col-md-12 form-control" type="text" placeholder="Enter Your Password" name="Password"/>
                </div>
                <div class="row form-group">
                    <input class="col-md-12 form-control" type="text" placeholder="Enter Your Email" name="Email"/>
                </div>
                <div class="row form-group">
                    <input class="col-md-12 form-control" type="text" placeholder="Enter Your Roll Number" name="Rollno"/>
                </div>
                <div class="row form-group">
                    <input class="col-md-12 form-control" type="text" placeholder="Enter Your Mobile Number" name="PhoneNo"/>
                </div>
                <div class="row form-group">
                    <select name="Mentor" aria-label="Default Select Example" aria-placeholder="Choose The Mentor to be assigned" class="col-md-12 form-control">
                        <% if(mentors){ %>
                            <% mentors.forEach((mentor) => { %>
                                <option value="<%= mentor.Name %>"><%= mentor.Name %> </option>
                            <% }); %>
                        <% }else{ %>
                            <option value=""> --- No Mentors --- </option>
                        <% } %>
                    </select>
                </div>
                <div class="row">
                    <button class="col-md-12 btn btn-outline-primary" type="submit"> Add Student </button >
                </div>
            </form>
        </div>
    </div>
</div>
<script>
    function openNav() {
        document.getElementById("mySidenav").style.width = "350px";
      }
      
      function closeNav() {
        document.getElementById("mySidenav").style.width = "0";
      } 
</script>
