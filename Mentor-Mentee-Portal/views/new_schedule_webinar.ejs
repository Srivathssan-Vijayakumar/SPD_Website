<%- include('new_student_header'); -%>
<div class="container-fluid">
    <div class="row">
        <div class="mentor-navigation col-md-1">
            <div class="row">
                <div class="mentor-navigation-area">
                    <ul>
                        <li class="mentor-link-item"><a href="/mentor/classroom/<%= classroom%>/test"><img src="/images/test.png" class="test-navigation-img"/></a></li>
                        <li class="mentor-link-item mentor-active"><a href="/mentor/classroom/<%= classroom%>/webinars"><img src="/images/webinar.png" class="test-navigation-img"/></a></li>
                        <br/>
                        <br/>
                        <li class="mentor-link-item"><a href="/mentor/classroom"><img src="/images/back.png"/></a></li>
                        <li class="mentor-link-item"><a href="/logout"><img src="/images/logout.png"/></a></li>
                    </ul>
                </div>
            </div>
        </div>
        <div class="mentor-content col-md-10">
            <div class="row">
                <div class="add-test-form col-md-6 m-auto">
                    <form action="/mentor/schedule-webinar/<%= classroom%>" method="POST">
                        <div class="row form-group">
                            <input type="text" placeholder="Enter Webinar Title" name="title" class="col-md-12 form-control"/>
                        </div>
                        <div class="row form-group">
                            <input type="text" placeholder="Enter Webinar Date (DD/MM/YYYY)" name="date" class="col-md-12 form-control"/>
                        </div>
                        <div class="row form-group">
                            <input type="text" placeholder="Enter Webinar Time (HH:MM:SS)" name="time" class="col-md-12 form-control"/>
                        </div>
                        <div class="row form-group">
                            <input type="text" placeholder="Enter Webinar Link" name="link" class="col-md-12 form-control"/>
                        </div>
                        <div class="row form-group">
                            <button class="add-webinar-button btn btn-outline-dark" type="submit"> Add Webinar </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
<script>
    $(document).ready(function(){
        var date_input=$('input[name="date"]');
        var container=$('.row form').length>0 ? $('.row form') : "body";
        var options={
            format:'dd/mm/yyyy',
            todayHighlight:true,
            autoclose:true
        };
        date_input.datepicker(options);
    })
</script>
<%- include('footer'); -%>